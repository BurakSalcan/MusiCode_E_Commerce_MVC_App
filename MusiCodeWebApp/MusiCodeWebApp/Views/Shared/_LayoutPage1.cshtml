<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Musicode.com - @ViewBag.Title</title>
    <link rel="icon" href="~/Assets/SiteImages/favicon_io/favicon.ico" type="image/x-icon">
    <link href="~/Assets/css/MainStyle.css" rel="stylesheet" />
    @RenderSection("styles", false)
</head>
<body>
    <div id="top"></div>
    <div class="topBarContainer">
        <div class="topBar">
            <div class="topBarLeft">
                <a href="~/Home/Index"><img src="~/Assets/SiteImages/MusicodeLogo.png" class="logo" /></a>
            </div>
            @if (Session["member"] != null)
            {
                <div class="topbarRight">
                    <a href="@Url.Action("LogOut","Member")">Çıkış Yap</a>
                    @*<a href="@Url.Action("Index","Cart")">Sepetim (@Session["cartcount"]) </a>*@
                    <a href="@Url.Action("Index","Cart")">Sepetim (@Html.Action("_GetCartCount", "Home")) </a>
                    <a href="@Url.Action("Index","Favorite")">Favoriler</a>
                    <a href="@Url.Action("Profile","Member")">Hesabım</a>
                    <div class="clearfix"></div>
                </div>
            }
            else
            {
                <div class="topbarRight">
                    <a href="@Url.Action("Login","Member")">Sepetim (0) </a>
                    <a href="@Url.Action("Login","Member")">Giriş Yap</a>
                    <a href="@Url.Action("Register","Member")">Üye Ol</a>
                </div>
            }
            <div class="clearfix"></div>
        </div>
    </div>
    
    <div class="mainContainer">
        <div class="hello">
            <img src="~/Assets/SiteImages/audiosanctuary_sennheiser_spares_banner_3.jpg" style="width:100%; border:1px solid silver"  />
        </div>
        <div class="categoryBar">
            <h4> Kategoriler </h4>
            @Html.Action("_Index", "Menu")
        </div>
        <div class="productBase">
            @RenderBody()
        </div>
        <div class="clearfix"></div>
    </div>
</body>
</html>
